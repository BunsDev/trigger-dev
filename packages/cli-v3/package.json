    "typescript": "^5.5.4",
    "vitest": "^1.6.0",
    "xdg-app-paths": "^8.3.0",
    "tsx": "4.17.0"
  },
  "scripts": {
    "typecheck": "tsc",
    "prepare": "tshy && pnpm run update-version",
    "build": "tshy",
    "dev": "tshy --watch",
    "test": "vitest",
    "test:e2e": "vitest --run -c e2e/vite.config.js",
    "update-version": "tsx ../../scripts/updateVersion.ts"
  },
