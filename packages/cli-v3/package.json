{
  "name": "trigger.dev",
  "version": "3.0.0-beta.52",
  "description": "A Command-Line Interface for Trigger.dev (v3) projects",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/triggerdotdev/trigger.dev.git",
    "directory": "packages/cli-v3"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "typescript",
    "trigger.dev",
    "workflows",
    "orchestration",
    "events",
    "webhooks",
    "integrations",
    "apis",
    "jobs",
    "background jobs",
    "nextjs"
  ],
  "files": [
    "dist"
  ],
  "bin": {
    "triggerdev": "./dist/esm/index.js"
  },
  "tshy": {
    "selfLink": false,
    "main": false,
    "module": false,
    "dialects": [
      "esm"
    ],
    "project": "./tsconfig.build.json",
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts"
    }
  },
  "devDependencies": {
    "@types/gradient-string": "^1.1.2",
    "@types/mock-fs": "^4.13.1",
    "@types/node": "20.14.14",
    "@types/object-hash": "^3.0.6",
    "@types/react": "^18.2.48",
    "@types/resolve": "^1.20.6",
    "@types/semver": "^7.3.13",
    "@types/ws": "^8.5.3",
    "@types/source-map-support": "0.5.10",
    "cpy-cli": "^5.0.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "open": "^10.0.3",
