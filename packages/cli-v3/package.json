    "mlly": "^1.7.1",
    "mock-fs": "^5.2.0",
    "nanoid": "^4.0.2",
    "node-fetch": "^3.3.0",
    "object-hash": "^3.0.0",
    "p-debounce": "^4.0.0",
    "p-throttle": "^6.1.0",
    "partysocket": "^0.0.17",
    "pkg-types": "^1.1.3",
    "proxy-agent": "^6.3.0",
    "react": "^18.2.0",
    "react-error-boundary": "^3.1.4",
